<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mylayout_2"
    android:layout_width="350dp"
    android:layout_height="310dp"
    android:layout_gravity="center"

    android:background="@drawable/custom_button_popup"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/cerclebackground"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/spark_secondary_color"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/guitar_animation"
            android:layout_width="300dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginTop="-1dp"
            app:srcCompat="@drawable/playguitar" />


        <TextView
            android:id="@+id/txt_lets_go_to_learn_guitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mitr_bold"
            android:text="LET'S GO TO LEARN BASIC GUITAR!"
            android:textColor="#FF00FF3E"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txt_please_choose_a_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/anton"
            android:text="Please choose a lesson"
            android:textColor="#7D7C7C"
            android:textSize="10dp"
            android:textStyle="normal"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/choose_lesson"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_note"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:lineHeight="15dp"
                android:text="NOTE"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_chord"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:lineHeight="15dp"
                android:text="CHORD"
                android:textColor="#FFF"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_chart"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:lineHeight="15dp"
                android:text="CHORD\n\nTABLE"
                android:textColor="#FFF"></TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>